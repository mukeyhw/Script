local Players = game:GetService("Players")
local RunService = game:GetService("RunService")

local player = Players.LocalPlayer
local character = player.Character or player.CharacterAdded:Wait()
local humanoid = character:WaitForChild("Humanoid")

-- GUI Setup
local screenGui = Instance.new("ScreenGui", player:WaitForChild("PlayerGui"))
screenGui.Name = "CuteGui"
screenGui.ResetOnSpawn = false

-- ปุ่มแบบน่ารัก
local function createCuteButton(name, order)
	local button = Instance.new("TextButton")
	button.Size = UDim2.new(0, 150, 0, 44)
	button.Position = UDim2.new(0, 20, 1, -60 - (order * 50))
	button.Font = Enum.Font.ComicNeue
	button.TextSize = 20
	button.BackgroundColor3 = Color3.fromRGB(255, 200, 230) -- สีชมพูอ่อน
	button.BorderColor3 = Color3.fromRGB(200, 150, 180)
	button.TextColor3 = Color3.fromRGB(80, 40, 60)
	button.Text = name
	button.AutoButtonColor = true
	button.BackgroundTransparency = 0
	button.BorderSizePixel = 2
	button.AnchorPoint = Vector2.new(0, 1)
	button.Parent = screenGui
	button.Name = name
	return button
end

-- สร้างปุ่มน่ารัก
local invisibleButton = createCuteButton("ล่องหน", 2)
local noclipButton = createCuteButton("ทะลุกำแพง", 1)
local runButton = createCuteButton("วิ่ง", 0)

-- ระบบวิ่ง
local isRunning = false
local normalSpeed = 16
local fastSpeed = 50

runButton.MouseButton1Click:Connect(function()
	character = player.Character or player.CharacterAdded:Wait()
	humanoid = character:WaitForChild("Humanoid")

	isRunning = not isRunning
	humanoid.WalkSpeed = isRunning and fastSpeed or normalSpeed
	runButton.Text = isRunning and "เดิน" or "วิ่ง"
end)

-- ระบบทะลุกำแพง
local isNoclip = false

noclipButton.MouseButton1Click:Connect(function()
	isNoclip = not isNoclip
	noclipButton.Text = isNoclip and "เลิกทะลุ" or "ทะลุกำแพง"
end)

RunService.Stepped:Connect(function()
	if isNoclip and player.Character then
		for _, part in pairs(player.Character:GetDescendants()) do
			if part:IsA("BasePart") and not part.Anchored then
				part.CanCollide = false
			end
		end
	end
end)

-- ระบบล่องหน
local isInvisible = false

local function setTransparency(value)
	for _, part in pairs(player.Character:GetDescendants()) do
		if part:IsA("BasePart") then
			part.Transparency = value
		elseif part:IsA("Decal") then
			part.Transparency = value
		end
	end
end

invisibleButton.MouseButton1Click:Connect(function()
	isInvisible = not isInvisible
	if isInvisible then
		setTransparency(1)
		invisibleButton.Text = "ปรากฏตัว"
	else
		setTransparency(0)
		invisibleButton.Text = "ล่องหน"
	end
end)

-- Reset เมื่อเกิดใหม่
player.CharacterAdded:Connect(function(char)
	character = char
	humanoid = char:WaitForChild("Humanoid")
	if not isRunning then
		humanoid.WalkSpeed = normalSpeed
	end
	if not isNoclip then
		for _, part in pairs(char:GetDescendants()) do
			if part:IsA("BasePart") then
				part.CanCollide = true
			end
		end
	end
	if not isInvisible then
		setTransparency(0)
	end
end)
